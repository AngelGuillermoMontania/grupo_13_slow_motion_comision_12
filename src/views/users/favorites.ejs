<%- include('../partials/head') %>

<body class="favorites">

      <%- include('../partials/header') %>

      <div class="contain-grid">
            <div class="contain-list">
                <span class="gender__grid">Peliculas</span>
                <div class="movies__section">
                        <% movies.forEach(elem => { %>
                              <div class="contain-img">
                                <a href="/products/serialMovie/<%- elem.id %>">
                                    <img src="/img/products-images/<%- elem.image %>" alt="">
                                </a>
                                <form action="/users/favorites?_method=DELETE&id=<%-elem.id%>&product=Movie" method="post" class="form-favorite" >
                                    <button class="button-favorite" type="submit">ELIMINAR DE FAVORITOS</button>
                                    <button class="button-favorite" onclick="addMovieCart('<%- elem.id %>')">AGREGAR A CARRITO</button>
                                </form>
                              </div>
                        <% } ) %>
                </div>
            </div>
            <div class="contain-list">
                <span class="gender__grid">Series</span>
                <div class="movies__section">
                    <% series.forEach(elem => { %>
                        <div class="contain-img">
                            <a href="/products/serialSerie/<%- elem.id %>">
                                <img src="/img/products-images/<%- elem.image %>" alt="">
                            </a>
                            <form action="/users/favorites?_method=DELETE&id=<%-elem.id%>&product=Serie" method="post" class="form-favorite" >
                                <button class="button-favorite" type="submit">ELIMINAR DE FAVORITOS</button>
                                <button class="button-favorite" onclick="addMovieCart('<%- elem.id %>')">AGREGAR A CARRITO</button>
                            </form>
                        </div>
                    <% } ) %>
                </div>
            </div>
      </div>








</body>