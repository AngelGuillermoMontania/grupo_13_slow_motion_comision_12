<%- include('../partials/head') %> 

<body class="body-admin">

    <!-- Header section -->
    <%- include('../partials/adminHeader') %> 

    <%- include('../partials/logoMobileAdmin') %>

    <%- include('../partials/adminMenu') %>

    <!-- grid section result search mobile -->
    <section class="result-search">
            <article class="result-article">
                <div class="info__table-detail">
                    <div class="col-info-result">
                        <% if (all.length !== 0) { %>
                            <% all.forEach(element => {  %>
                                <div class="gallery-result">
                                    <div class="result__search">
                                        <div class="row__info-detail">
                                            <span><%- element.title %> </span>
                                        </div>
                                        <img src="/img/products-images/<%= element.image %>" alt="">
                                    </div>
                                    <div class="flex__synopsis-information">
                                        <div class="result__search">
                                            <div class="row__info-detail">
                                                <span>Descripcion</span>
                                            </div>
                                            <p><%- element.description %></p>
                                        </div>
                                    </div>
                                    <div class="flex-contain-info">
                                        <div class="result__searching-secondary">
                                            <div class="row__info-secondary">
                                                <% if (element.duration) { %>
                                                    <span>Duration</span>
                                                    <p><%- element.duration %></p>
                                                <% } else { %>
                                                    <span>Temporadas</span>
                                                    <p><%- element.seasons %></p>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="result__searching-secondary">
                                            <div class="row__info-secondary">
                                                <span>Director</span>
                                            </div>
                                            <p><%- element.director %></p>
                                        </div>
                                        <div class="result__searching-secondary">
                                            <div class="row__info-secondary">
                                                <span>Rating</span>
                                            </div>
                                            <p><%- element.rating %></p>
                                        </div>
                                    </div>
                                    <div class="flex__synopsis-information">
                                        <div class="result__search">
                                            <div class="row__info-detail">
                                                <span>Opcion</span>
                                            </div>
                                            <div class="options-result">
                                                <% if (element.duration) { %>
                                                    <div class="link__redirection-edit">
                                                        <a href="../admin/products/movie/<%- element.id %>/edit"><i class="far fa-edit"></i></a>
                                                    </div>
                                                    <div class="delete__form-result">
                                                        <form action="../admin/deleteProductMovie/<%- element.id %>?_method=DELETE" method="POST">
                                                            <button type="submit" class="deleteResult"><i class="far fa-trash-alt"></i></button>
                                                        </form>
                                                    </div>
                                                <% } else { %>
                                                    <div class="link__redirection-edit">
                                                        <a href="../admin/products/serie/<%- element.id %>/edit"><i class="far fa-edit"></i></a>
                                                    </div>
                                                    <div class="delete__form-result">
                                                        <form action="../admin/deleteProductSerie/<%- element.id %>?_method=DELETE" method="POST">
                                                            <button type="submit" class="deleteResult"><i class="far fa-trash-alt"></i></button>
                                                        </form>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <h2 class="no-results">No se encontraron resultados para la busqueda</h2>
                        <% } %>
                    </div>
                </div>
            </article>
    </section>
    <!-- Footer section -->
    <%- include('../partials/adminFooter')  %>
</body>
</html>