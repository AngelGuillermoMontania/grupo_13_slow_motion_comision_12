<%- include('../partials/head') %>
<body class="body-admin">
    <!-- Header-->
    <%- include ('../partials/adminHeader') %>
    <!-- Logo mobile and tablet -->
    <%- include ('../partials/logoMobileADmin') %>
    <div class="form__files-desktop">
        <div class="form-caption">
            <form action="/admin/form" method="post" class="upload-files">
                <div class="contain__date">
                    <input type="text" name="name" id="nombre" placeholder="Nombre" class="input">
                </div>
                <div class="contain__date">
                    <textarea type="text" name="description" id="comentario" placeholder="Descripcion" class="input"></textarea>
                </div>
                <div class="contain__date">
                    <label for="movieSeries">A subir:</label>
                    <select name="movieSeries" id="movieSeries" class="input">
                        <option></option>
                        <option value="movie">Pelicula</option>
                        <option value="serie">Serie</option>
                    </select>
                </div>
                <div class="contain__date">
                    <label for="gender">Genero:</label>
                    <select name="gender" id="gender" class="input">
                        <option></option>
                        <option value="terror">Terror</option>
                        <option value="suspenso">Suspenso</option>
                        <option value="dibujos animados">Dibujo animados</option>
                        <option value="accion">Accion</option>
                        <option value="comedia">Comedia</option>
                    </select>
                </div>
                <div class="contain__date">
                    <label for="idiom">Idioma</label>
                    <select name="idiom" id="idiom" class="input">
                        <option></option>
                        <option value="español">Español</option>
                        <option value="ingles">Ingles</option>
                        <option value="otro">otro odioma</option>
                    </select>
                </div>
                <div class="contain__date">
                    <label for="image">Cargar imagen de portada</label>
                    <input type="file" name="image" accept=".jpg" class="input">
                </div>
                <div class="contain__date">
                    <label for="video">Pegar URL</label>
                    <input type="url" name="video" class="input">
                </div>
                <div class="contain__date">
                    <input type="number" name="price" id="price" placeholder="Indique su precio $$$" class="input">
                </div>
                <div class="contain__date">
                    <input type="submit" value="Cargar" class="input-enter">
                </div>
            </form>
        </div>
    </div>
    <div class="form__files">
        <div class="error">
            <p>
                Lo siento, solo es posible cargar archivos desde su ordenador
            </p>
        </div>
    </div>
    <!-- Footer -->
    <%- include ('../partials/adminFooter') %>
</body>
</html>