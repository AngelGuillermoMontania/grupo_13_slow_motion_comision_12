<%- include('../partials/head') %>
<body class="body-admin">
    <!-- Header-->
    <%- include ('../partials/adminHeader') %>
    <!-- Logo mobile and tablet -->
    <%- include ('../partials/logoMobileADmin') %>
    <div class="form__files-desktop">
        <div class="form-caption">
            <form action="/admin/form" method="post" class="upload-files" enctype="multipart/form-data">
                <div class="contain__date">
                    <label for="movieSeries">A subir:</label>
                    <select name="movieSeries" id="movieSeries" class="input" onchange="showHide()" >
                        <option value="movie" id="selectMovie">Pelicula</option>
                        <option value="serie" id="selectSerie">Serie</option>
                    </select>
                </div>
                <div class="contain__date">
                    <input type="text" name="name" id="nombre" placeholder="Nombre" class="input" required>
                </div>
                <div class="contain__date">
                    <textarea type="text" name="description" id="comentario" placeholder="Descripción" class="input"></textarea required>
                </div>
                
                    <div class="contain__date">
                        <input type="number" name="seasons" id="seasons" placeholder="Temporadas" class="input" hidden>
                    </div>
               
                <div class="contain__date">
                    <input type="number" name="duration" id="duration" placeholder="Duración en minutos" class="input">
                </div>
                <div class="contain__date">
                    <input type="number" step="any" name="appreciation" id="appreciation" placeholder="Calificación" class="input" required>
                </div>
                <div class="contain__date">
                    <label for="genre">Genero:</label>
                        <% genres.forEach(genre => { %>
                            <input type="checkbox" name="genre" value="<%- genre.name %>"><%- genre.name %></input> 
                        <% }) %>
                </div>
                <div class="contain__date">
                    <label for="year">Año:</label>
                    <input type="month" name="age" id="age" placeholder="Año" class="input" required>
                </div>
                <div class="contain__date">
                    <input type="text" name="director" id="director" placeholder="Director" class="input" required>
                </div>
                <div class="contain__date">
                    <label for="idiom">Idioma:</label>
                    <div class="form-check-container">
                        <input type="checkbox" name="idiom" value="Inglés" checked>Ingles
                        <input type="checkbox" name="idiom" value="Latino">Latino
                        <input type="checkbox" name="idiom" value="Español">Español
                        <input type="checkbox" name="idiom" value="Alemán">Alemán
                        <input type="checkbox" name="idiom" value="Japones">Japones
                    </div>
                </div>
                <div class="contain__date">
                    <label for="idiom">Subtitulos:</label>
                    <div class="form-check-container">
                        <input type="radio" name="subtitle" value="Latino" checked>Si
                        <input type="radio" name="subtitle" value="No">No
                    </div>
                </div>
                <div class="contain__date">
                    <label for="productImage">Cargar imagen de portada</label>
                    <input type="file" name="productImage" class="input">
                </div>
                <div class="contain__date">
                    <label for="video">Pegar URL del trailer</label>
                    <input type="url" name="video" class="input" required>
                </div>
                <div class="contain__date">
                    <input type="number" name="price" id="buyPrice" placeholder="Precio de venta" class="input" required>
                </div>
                <div class="contain__date">
                    <input type="number" name="price" id="rentalPrice" placeholder="Precio de alquiler" class="input" required>
                </div>
                <div class="contain__date">
                    <input type="number" name="price" id="rentalPrice" placeholder="Descuento" class="input" required>
                </div>
                <div class="contain__date">
                    <input type="submit" value="Cargar" class="input-enter">
                </div>
            </form>
        </div>
    </div>
    <div class="form__files">
        <div class="error">
            <p>
                Lo siento, solo es posible cargar archivos desde su ordenador
            </p>
        </div>
    </div>
    <!-- Footer -->
    <%- include ('../partials/adminFooter') %>
    <script src="/js/uploadFiles.js"></script>
</body>
</html>